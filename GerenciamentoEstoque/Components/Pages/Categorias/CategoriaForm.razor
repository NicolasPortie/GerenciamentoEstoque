@page "/categorias/novo"
@page "/categorias/editar/{Id:int}"
@using Microsoft.EntityFrameworkCore
@using GerenciamentoEstoque.Models
@using GerenciamentoEstoque.Data
@using Microsoft.AspNetCore.Components.Forms
@inject IDbContextFactory<AppDbContext> DbFactory
@inject NavigationManager Nav
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<div class="mb-8">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-extrabold text-gray-800 tracking-tight">@(Id == 0 ? "Nova Categoria" : "Editar Categoria")</h1>
            <p class="text-sm text-gray-500">Categorize seus produtos para facilitar a organização.</p>
        </div>
        <button @onclick="Voltar" class="flex items-center gap-2 text-gray-400 hover:text-gray-600 font-semibold text-sm transition-colors">
            <span class="material-symbols-outlined text-lg">close</span>
            Cancelar
        </button>
    </div>

    @if (carregando)
    {
        <div class="flex flex-col items-center justify-center py-20 bg-white border border-gray-100 shadow-sm">
            <div class="w-10 h-10 border-4 border-primary border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="text-gray-400 font-medium">Carregando dados...</p>
        </div>
    }
    else
    {
        <EditForm Model="categoria" OnValidSubmit="Salvar">
            <DataAnnotationsValidator />
            
            <div class="bg-white border border-gray-100 p-8 shadow-sm space-y-8">
                <div class="max-w-xl">
                    <div class="flex items-center gap-2 text-primary font-bold text-xs uppercase tracking-widest mb-4">
                        <span class="material-symbols-outlined text-lg">category</span>
                        Dados da Categoria
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Nome da Categoria</label>
                        <InputText @bind-Value="categoria.Nome" placeholder="Ex: Higiene, Bebidas, Alimentos..." class="w-full px-4 py-4 bg-gray-50 border-none rounded focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-bold text-gray-700" />
                        <ValidationMessage For="@(() => categoria.Nome)" class="text-rose-500 text-[10px] font-bold mt-1 uppercase tracking-tighter" />
                    </div>
                </div>

                <div class="pt-4 max-w-xs">
                    <button type="submit" class="w-full bg-primary text-white py-4 rounded font-bold text-sm shadow-md hover:bg-primary-hover transition-all active:scale-95 flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        @(Id == 0 ? "Cadastrar Categoria" : "Salvar Alterações")
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    
    private Categoria categoria = new() { Ativo = true };
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            using var context = DbFactory.CreateDbContext();
            var c = await context.Categorias.FindAsync(Id);
            if (c != null)
            {
                categoria = c;
            }
            else
            {
                Nav.NavigateTo("/categorias");
            }
        }
        carregando = false;
    }

    private async Task Salvar()
    {
        using var context = DbFactory.CreateDbContext();

        categoria.Ativo = true;

        if (Id == 0)
        {
            categoria.DataCadastro = DateTime.Now;
            context.Categorias.Add(categoria);
        }
        else
        {
            context.Categorias.Update(categoria);
        }

        await context.SaveChangesAsync();
        Nav.NavigateTo("/categorias");
    }

    private void Voltar() => Nav.NavigateTo("/categorias");
}
