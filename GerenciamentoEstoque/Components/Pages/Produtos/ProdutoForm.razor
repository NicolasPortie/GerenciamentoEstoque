@page "/produtos/novo"
@page "/produtos/editar/{Id:int}"
@using Microsoft.AspNetCore.Components.Forms
@using GerenciamentoEstoque.Models
@using GerenciamentoEstoque.Services
@inject IProdutoService ProdutoService
@inject ICategoriaService CategoriaService
@inject IMarcaService MarcaService
@inject IUnidadeMedidaService UnidadeMedidaService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Globalization
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<div class="mb-8">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-extrabold text-gray-800 tracking-tight">@(Id == 0 ? "Novo Produto" : "Editar Produto")</h1>
            <p class="text-sm text-gray-500">Preencha as informações para catalogar seu item.</p>
        </div>
        <button @onclick="Voltar" class="flex items-center gap-2 text-gray-400 hover:text-gray-600 font-semibold text-sm transition-colors">
            <span class="material-symbols-outlined text-lg">close</span>
            Cancelar
        </button>
    </div>

    @if (carregando)
    {
        <div class="flex flex-col items-center justify-center py-20 bg-white rounded-2xl border border-gray-100 shadow-sm">
            <div class="w-10 h-10 border-4 border-primary border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="text-gray-400 font-medium">Carregando dados...</p>
        </div>
    }
    else
    {
        <EditForm Model="produto" OnValidSubmit="Salvar">
            <DataAnnotationsValidator />
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Informações Principais -->
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm space-y-6">
                        <div class="flex items-center gap-2 text-primary font-bold text-xs uppercase tracking-widest mb-2">
                            <span class="material-symbols-outlined text-lg">info</span>
                            Informações Básicas
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="md:col-span-2">
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Nome do Produto</label>
                                <InputText @bind-Value="produto.Nome" placeholder="Ex: Arroz Integral 5kg" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-semibold text-gray-700 placeholder:text-gray-300" />
                                <ValidationMessage For="@(() => produto.Nome)" class="text-rose-500 text-[10px] font-bold mt-1 uppercase tracking-tighter" />
                            </div>

                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">SKU / Código</label>
                                <InputText @bind-Value="produto.CodigoInterno" placeholder="Gerado automaticamente" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-mono" />
                            </div>

                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Código de Barras</label>
                                <InputText @bind-Value="produto.CodigoBarras" placeholder="EAN13" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-mono" />
                            </div>

                            <div class="md:col-span-2">
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Descrição Curta</label>
                                <InputTextArea @bind-Value="produto.Descricao" rows="3" placeholder="Detalhes técnicos, marca, peso..." class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none resize-none" />
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm space-y-6">
                        <div class="flex items-center gap-2 text-primary font-bold text-xs uppercase tracking-widest mb-2">
                            <span class="material-symbols-outlined text-lg">payments</span>
                            Precificação
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Preço de Custo</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <span class="text-gray-400 text-xs font-bold uppercase">R$</span>
                                    </div>
                                    <input value="@precoCustoTexto"
                                           @oninput="OnPrecoCustoInput"
                                           inputmode="numeric"
                                           autocomplete="off"
                                           class="w-full pl-12 pr-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-mono font-bold text-gray-700" />
                                </div>
                            </div>

                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Preço de Venda</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <span class="text-gray-400 text-xs font-bold uppercase">R$</span>
                                    </div>
                                    <input value="@precoVendaTexto"
                                           @oninput="OnPrecoVendaInput"
                                           inputmode="numeric"
                                           autocomplete="off"
                                           class="w-full pl-12 pr-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-mono font-bold text-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar do Form -->
                <div class="space-y-6">
                    <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm space-y-6">
                        <div class="flex items-center gap-2 text-primary font-bold text-xs uppercase tracking-widest mb-2">
                            <span class="material-symbols-outlined text-lg">inventory</span>
                            Classificação
                        </div>
                        
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Categoria</label>
                            <div class="flex items-stretch gap-2">
                                <InputSelect @bind-Value="produto.CategoriaId" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none font-semibold text-gray-700">
                                    <option value="0">Selecionar...</option>
                                    @foreach (var cat in categorias)
                                    {
                                        <option value="@cat.CategoriaId">@cat.Nome</option>
                                    }
                                </InputSelect>
                                <button type="button" @onclick="AbrirModalCategoriaRapida" class="px-3 bg-gray-50 rounded-xl border border-gray-100 text-gray-400 hover:text-primary hover:border-primary/20 transition-colors" title="Cadastrar categoria">
                                    <span class="material-symbols-outlined text-[18px]">add</span>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => produto.CategoriaId)" class="text-rose-500 text-[10px] font-bold mt-1 uppercase tracking-tighter" />
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Marca</label>
                            <div class="flex items-stretch gap-2">
                                <InputSelect @bind-Value="produto.MarcaId" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none">
                                    <option value="0">Selecionar...</option>
                                    @foreach (var marc in marcas)
                                    {
                                        <option value="@marc.MarcaId">@marc.Nome</option>
                                    }
                                </InputSelect>
                                <button type="button" @onclick="AbrirModalMarcaRapida" class="px-3 bg-gray-50 rounded-xl border border-gray-100 text-gray-400 hover:text-primary hover:border-primary/20 transition-colors" title="Cadastrar marca">
                                    <span class="material-symbols-outlined text-[18px]">add</span>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Unidade</label>
                            <div class="flex items-stretch gap-2">
                                <InputSelect @bind-Value="produto.UnidadeMedidaId" class="w-full px-4 py-3 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-primary/20 transition-all text-sm outline-none">
                                    <option value="0">Selecionar...</option>
                                    @foreach (var un in unidades)
                                    {
                                        <option value="@un.UnidadeMedidaId">@un.Sigla - @un.Nome</option>
                                    }
                                </InputSelect>
                                <button type="button" @onclick="AbrirModalUnidadeRapida" class="px-3 bg-gray-50 rounded-xl border border-gray-100 text-gray-400 hover:text-primary hover:border-primary/20 transition-colors" title="Cadastrar unidade">
                                    <span class="material-symbols-outlined text-[18px]">add</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Id == 0)
                    {
                        <div class="bg-orange-50 rounded-2xl border border-orange-100 p-6 space-y-4">
                            <div class="flex items-center gap-2 text-orange-700 font-bold text-xs uppercase tracking-widest">
                                <span class="material-symbols-outlined text-lg">priority_high</span>
                                Estoque Inicial
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-orange-400 uppercase mb-1">Qtd Atual</label>
                                    <input type="number" step="0.01" @bind="qtdInicial" class="w-full px-3 py-2 bg-white/50 border-none rounded-lg text-sm outline-none font-mono font-bold focus:ring-1 focus:ring-orange-200" />
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-orange-400 uppercase mb-1">Mínimo</label>
                                    <input type="number" step="0.01" @bind="qtdMinima" class="w-full px-3 py-2 bg-white/50 border-none rounded-lg text-sm outline-none font-mono font-bold focus:ring-1 focus:ring-orange-200" />
                                </div>
                            </div>
                        </div>
                    }

                    <div class="pt-4">
                        <button type="submit" class="w-full bg-primary text-white py-4 rounded-2xl font-bold text-sm shadow-xl shadow-primary/20 hover:bg-primary-hover hover:-translate-y-0.5 transition-all active:scale-95 flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">save</span>
                            @(Id == 0 ? "Cadastrar Produto" : "Salvar Alterações")
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

