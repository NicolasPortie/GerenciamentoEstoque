@code {
    [Parameter] public int Id { get; set; }
    
    private Produto produto = new() { Ativo = true };
    private List<Categoria> categorias = new();
    private List<Marca> marcas = new();
    private List<UnidadeMedida> unidades = new();

    private static readonly CultureInfo PtBr = CultureInfo.GetCultureInfo("pt-BR");
    private string precoCustoTexto = string.Empty;
    private string precoVendaTexto = string.Empty;
    
    private decimal qtdInicial = 0;
    private decimal qtdMinima = 0;
    private bool carregando = true;

    private bool exibirModalMarcaRapida = false;
    private bool exibirModalUnidadeRapida = false;
    private bool exibirModalCategoriaRapida = false;
    private Marca marcaRapida = new() { Ativo = true };
    private UnidadeMedida unidadeRapida = new() { Ativo = true };
    private Categoria categoriaRapida = new() { Ativo = true };

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.ObterAtivasAsync();
        marcas = await MarcaService.ObterAtivasAsync();
        unidades = await UnidadeMedidaService.ObterAtivasAsync();

        if (Id != 0)
        {
            var p = await ProdutoService.ObterPorIdComEstoqueAsync(Id);
                
            if (p != null)
            {
                produto = p;
            }
            else
            {
                Nav.NavigateTo("/produtos");
            }
        }
        else
        {
            if (categorias.Any() && produto.CategoriaId == 0) produto.CategoriaId = categorias.First().CategoriaId;
            if (marcas.Any()) produto.MarcaId = marcas.First().MarcaId;
            if (unidades.Any()) produto.UnidadeMedidaId = unidades.First().UnidadeMedidaId;
        }

        SincronizarPrecosTexto();

        carregando = false;
    }

    private void AbrirModalMarcaRapida()
    {
        marcaRapida = new Marca() { Ativo = true };
        exibirModalMarcaRapida = true;
    }

    private void FecharModalMarcaRapida()
    {
        exibirModalMarcaRapida = false;
    }

    private async Task SalvarMarcaRapida()
    {
        var novaMarca = await MarcaService.CriarAsync(marcaRapida);
        marcas = await MarcaService.ObterAtivasAsync();
        produto.MarcaId = novaMarca.MarcaId;
        exibirModalMarcaRapida = false;
    }

    private void AbrirModalUnidadeRapida()
    {
        unidadeRapida = new UnidadeMedida() { Ativo = true };
        exibirModalUnidadeRapida = true;
    }

    private void FecharModalUnidadeRapida()
    {
        exibirModalUnidadeRapida = false;
    }

    private async Task SalvarUnidadeRapida()
    {
        var novaUnidade = await UnidadeMedidaService.CriarAsync(unidadeRapida);
        unidades = await UnidadeMedidaService.ObterAtivasAsync();
        produto.UnidadeMedidaId = novaUnidade.UnidadeMedidaId;
        exibirModalUnidadeRapida = false;
    }

    private void AbrirModalCategoriaRapida()
    {
        categoriaRapida = new Categoria() { Ativo = true };
        exibirModalCategoriaRapida = true;
    }

    private void FecharModalCategoriaRapida()
    {
        exibirModalCategoriaRapida = false;
    }

    private async Task SalvarCategoriaRapida()
    {
        var novaCategoria = await CategoriaService.CriarAsync(categoriaRapida);
        categorias = await CategoriaService.ObterAtivasAsync();
        produto.CategoriaId = novaCategoria.CategoriaId;
        exibirModalCategoriaRapida = false;
    }

    private void SincronizarPrecosTexto()
    {
        precoCustoTexto = produto.PrecoCusto == 0 ? string.Empty : produto.PrecoCusto.ToString("N2", PtBr);
        precoVendaTexto = produto.PrecoVenda == 0 ? string.Empty : produto.PrecoVenda.ToString("N2", PtBr);
    }

    private void OnPrecoCustoInput(ChangeEventArgs e)
    {
        precoCustoTexto = FormatarMoedaDigitada(e.Value?.ToString());
        produto.PrecoCusto = ParseMoedaPtBr(precoCustoTexto);
    }

    private void OnPrecoVendaInput(ChangeEventArgs e)
    {
        precoVendaTexto = FormatarMoedaDigitada(e.Value?.ToString());
        produto.PrecoVenda = ParseMoedaPtBr(precoVendaTexto);
    }

    private static string FormatarMoedaDigitada(string? valor)
    {
        var digits = new string((valor ?? string.Empty).Where(char.IsDigit).ToArray());
        if (digits.Length == 0)
            return string.Empty;

        if (digits.Length > 15)
            digits = digits[..15];

        if (!long.TryParse(digits, out var cents))
            return string.Empty;

        var dec = cents / 100m;
        return dec.ToString("N2", PtBr);
    }

    private static decimal ParseMoedaPtBr(string? valor)
    {
        if (string.IsNullOrWhiteSpace(valor))
            return 0m;

        return decimal.TryParse(valor, NumberStyles.Number, PtBr, out var parsed) ? parsed : 0m;
    }

    private async Task Salvar()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var usuarioIdStr = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        
        if (string.IsNullOrEmpty(usuarioIdStr) || !int.TryParse(usuarioIdStr, out int usuarioId))
            return;

        if (Id == 0)
        {
            await ProdutoService.CriarAsync(produto, qtdInicial, qtdMinima, usuarioId);
        }
        else
        {
            await ProdutoService.AtualizarAsync(produto);
        }

        Nav.NavigateTo("/produtos");
    }

    private void Voltar() => Nav.NavigateTo("/produtos");
}
