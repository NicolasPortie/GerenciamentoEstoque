@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using GerenciamentoEstoque.Data
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject IDbContextFactory<AppDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Dashboard - GestãoEstoque</PageTitle>

<div class="space-y-6">
    <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Painel de Controle</h1>
            <p class="text-xs text-gray-500 font-semibold uppercase tracking-wider mt-1">Status operacional do estoque</p>
        </div>
        <div class="flex gap-2">
            <button class="bg-primary text-white px-4 py-2 rounded font-bold text-xs hover:bg-primary-hover transition-colors flex items-center gap-2">
                <span class="material-symbols-outlined text-sm">add</span>
                Novo Registro
            </button>
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-0 border border-gray-200 bg-white">
        <div class="p-6 border-r border-gray-100 relative overflow-hidden group">
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-primary"></div>
            <div class="flex flex-col">
                <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Total em Catálogo</span>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-gray-900">@totalProdutos</span>
                    <span class="text-[10px] font-bold text-gray-400 uppercase">Produtos</span>
                </div>
            </div>
            <span class="material-symbols-outlined absolute right-4 bottom-4 text-4xl text-gray-50 opacity-10 group-hover:opacity-20 transition-opacity">inventory_2</span>
        </div>

        <div class="p-6 border-r border-gray-100 relative overflow-hidden group">
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-orange-500"></div>
            <div class="flex flex-col">
                <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Alertas de Reposição</span>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-orange-600">@estoqueBaixo</span>
                    <span class="text-[10px] font-bold text-orange-400 uppercase">Crítico</span>
                </div>
            </div>
            <span class="material-symbols-outlined absolute right-4 bottom-4 text-4xl text-gray-50 opacity-10 group-hover:opacity-20 transition-opacity">warning</span>
        </div>

        <div class="p-6 border-r border-gray-100 relative overflow-hidden group">
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-green-500"></div>
            <div class="flex flex-col">
                <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Receita Mensal (Hoje)</span>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-gray-900">@vendasHoje.ToString("C2")</span>
                </div>
            </div>
            <span class="material-symbols-outlined absolute right-4 bottom-4 text-4xl text-gray-50 opacity-10 group-hover:opacity-20 transition-opacity">payments</span>
        </div>

        <div class="p-6 relative overflow-hidden group">
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-accent"></div>
            <div class="flex flex-col">
                <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Giro de Estoque</span>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-gray-900">@totalMovimentacoes</span>
                    <span class="text-[10px] font-bold text-gray-400 uppercase">Operações</span>
                </div>
            </div>
            <span class="material-symbols-outlined absolute right-4 bottom-4 text-4xl text-gray-50 opacity-10 group-hover:opacity-20 transition-opacity">sync_alt</span>
        </div>
    </div>

    <!-- Tabela de Movimentações -->
    <div class="bg-white border border-gray-200 shadow-sm">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between bg-gray-50">
            <h2 class="text-sm font-bold text-gray-800 flex items-center gap-2 uppercase">
                <span class="material-symbols-outlined text-lg text-primary">history</span>
                Histórico de Entradas e Saídas
            </h2>
            <a href="/movimentacoes" class="text-primary text-xs font-bold hover:bg-gray-100 py-1.5 px-3 border border-gray-200 rounded transition-colors bg-white">Ver Tudo</a>
        </div>
        <div class="overflow-x-auto">
            @if (!movimentacoesRecentes.Any())
            {
                <div class="p-16 text-center">
                    <span class="material-symbols-outlined text-4xl text-gray-200 mb-2">database_off</span>
                    <p class="text-gray-400 text-sm font-medium">Nenhum registro de movimentação foi localizado.</p>
                </div>
            }
            else
            {
                <table class="w-full text-left text-sm">
                    <thead>
                        <tr class="bg-gray-100/50 text-gray-600 border-b border-gray-200">
                            <th class="px-6 py-4 font-bold uppercase text-[10px] tracking-wider">Produto</th>
                            <th class="px-6 py-4 font-bold uppercase text-[10px] tracking-wider">Ação Realizada</th>
                            <th class="px-6 py-4 font-bold uppercase text-[10px] tracking-wider text-right">Qtd. Movimentada</th>
                            <th class="px-6 py-4 font-bold uppercase text-[10px] tracking-wider text-right">Data/Hora</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        @foreach (var mov in movimentacoesRecentes)
                        {
                            <tr class="hover:bg-blue-50/30 transition-colors">
                                <td class="px-6 py-4 font-bold text-gray-700">@mov.Produto?.Nome</td>
                                <td class="px-6 py-4">
                                    @if (mov.TipoMovimentacao == GerenciamentoEstoque.Enums.TipoMovimentacao.Entrada)
                                    {
                                        <div class="flex items-center gap-1.5 text-green-600 font-bold text-[11px]">
                                            <span class="material-symbols-outlined text-sm">arrow_downward</span>
                                            ENTRADA NO ESTOQUE
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="flex items-center gap-1.5 text-rose-600 font-bold text-[11px]">
                                            <span class="material-symbols-outlined text-sm">arrow_upward</span>
                                            SAÍDA / VENDA
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right font-mono font-bold text-gray-900 border-r border-gray-50">@mov.Quantidade</td>
                                <td class="px-6 py-4 text-right text-gray-500 font-medium">@mov.DataMovimentacao.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private int totalProdutos = 0;
    private int estoqueBaixo = 0;
    private decimal vendasHoje = 0;
    private int totalMovimentacoes = 0;
    private List<Models.MovimentacaoEstoque> movimentacoesRecentes = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        
        totalProdutos = await context.Produtos.CountAsync();
        estoqueBaixo = await context.Estoques.CountAsync(e => e.QuantidadeAtual <= e.QuantidadeMinima);
        
        var hoje = DateTime.Today;
        vendasHoje = await context.Vendas
            .Where(v => v.DataVenda >= hoje)
            .SumAsync(v => (decimal?)v.ValorTotal) ?? 0;
            
        totalMovimentacoes = await context.MovimentacoesEstoque
            .CountAsync(m => m.DataMovimentacao >= DateTime.Now.AddDays(-7));

        movimentacoesRecentes = await context.MovimentacoesEstoque
            .Include(m => m.Produto)
            .OrderByDescending(m => m.DataMovimentacao)
            .Take(5)
            .ToListAsync();
    }
}
