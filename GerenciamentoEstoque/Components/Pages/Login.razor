@page "/login"
@layout GerenciamentoEstoque.Components.Layout.LoginLayout

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-md p-8">
            <div class="text-center mb-8">
                <h1 class="text-2xl font-bold text-gray-800">Gestao de Estoque</h1>
                <p class="text-gray-500 mt-2">Entre com suas credenciais</p>
            </div>
            
            @if (!string.IsNullOrEmpty(Erro))
            {
                <div class="mb-4 p-3 bg-red-100 border border-red-300 rounded text-red-700 text-sm">
                    @MensagemErro
                </div>
            }
            
            <form action="/Conta/Login" method="POST">
                <AntiforgeryToken />
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="email">E-mail</label>
                    <input 
                        class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" 
                        id="email" 
                        name="Email"
                        placeholder="seu@email.com" 
                        type="email"
                        required
                    />
                </div>
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="password">Senha</label>
                    <input 
                        class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" 
                        id="password" 
                        name="Senha"
                        placeholder="Sua senha" 
                        type="password"
                        required
                    />
                </div>
                
                <div class="flex items-center mb-6">
                    <input 
                        class="h-4 w-4 border-gray-300 rounded" 
                        type="checkbox"
                        name="Lembrar"
                        id="remember-me"
                    />
                    <label class="ml-2 text-sm text-gray-600" for="remember-me">Lembrar de mim</label>
                </div>
                
                <button 
                    type="submit"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded font-medium hover:bg-blue-700"
                >
                    Entrar
                </button>
            </form>
            
            <p class="mt-6 text-center text-sm text-gray-500">
                Problemas para acessar? Contate o administrador.
            </p>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "erro")]
    public string? Erro { get; set; }

    public string MensagemErro => Erro switch
    {
        "CredenciaisInvalidas" => "E-mail ou senha incorretos.",
        "DadosInvalidos" => "Preencha todos os campos.",
        _ => "Erro ao entrar. Tente novamente."
    };
}
